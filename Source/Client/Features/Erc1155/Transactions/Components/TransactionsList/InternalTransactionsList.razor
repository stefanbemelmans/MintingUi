@using Herc.Pwa.Client.Features.Erc1155.Transactions.Components.TransactionsList
@inherits TransactionListBase
<div class="pl-1" style="overflow-x:auto;">
  Transaction Count: @TransactionCount
  <table>
    <tr>
      <th>Hash</th>
      <th>Block</th>
      <th>Time</th>
      <th>From</th>
      <th>To</th>
      <th>Type</th>
      <th>Value</th>
    </tr>

    @foreach (var transaction in Transactions)
    {
      <tr>
        <td>@GetSubString(transaction.Hash)</td>
        <td>@transaction.Timestamp</td>
        <td>@transaction.Nonce</td>
        <td>@GetSubString(transaction.From.Address)</td>
        <td>@GetSubString(transaction.To.Address)</td>
        <td>@transaction.Type</td>
        <td>@transaction.Value</td>
      </tr>

    }
  </table>
</div>

<style>
  table {
    width: 100%;
    padding: .5rem;
  }

  th, td {
    border-bottom: 1px solid #ddd;
    padding-left: 1px;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }
</style>